class Solution {
    public boolean isPalindrome(String s) {
        String s1= s.toLowerCase();
        String str= s1.replaceAll("[^a-z0-9]","");
        String rev="";
        for(int i=str.length()-1;i>=0;i--)
        {
            rev=rev+str.charAt(i);
        }
        if(str.equals(rev))
        {
            return true;
        }
        else
        {
            return false;
            
        }
      
        
    }
}
